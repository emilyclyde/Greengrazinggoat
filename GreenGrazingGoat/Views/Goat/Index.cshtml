@model IEnumerable<GreenGrazingGoat.Models.Goat>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <p>
        Find by Goat Name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GoatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoatColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoatType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoatGender)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GoatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoatColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoatType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoatGender)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GoatID }) |
                @Html.ActionLink("Details", "Details", new { id = item.GoatID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GoatID })
            </td>
        </tr>
    }

</table>
